{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tsbuild-node/ton.tsbuildinfo",
        "outDir": "./node_modules/.tsbuild-node",
        "types": ["jest"]
    },
    "include": [
